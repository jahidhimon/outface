<div>
  <h1 class="font-bold text-4xl">Posts#new</h1>
</div>

<%= turbo_frame_tag "new_post" do %>
	<div class="bg-slate-800 rounded-lg w-11/12 pt-5 pb-3 px-6 md:w-7/12 mx-auto">
		<%= form_with model: @post do |form| %>
			<%= form.text_area :body, rows: "4", class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Write your thoughts here..."%>
			<%= form.submit "Create Post", class: "text-white hover:bg-blue-700 focus:ring-4 focus:outline-none cursor-pointer focus:ring-slate-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-blue-600 hover:bg-blue-700 focus:ring-blue-800 mt-4" %>
		<% end %>
	</div>

<% end %>
