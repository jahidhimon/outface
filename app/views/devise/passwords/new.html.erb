<div class="mt-10 mx-auto w-4/6 md:space-x-20">
	<h2 class="text-xl font-bold leading-tight tracking-tight text-slate-200 md:text-2xl">Forgot your password?</h2>
	
	<div class="w-1/2 mx-auto mt-10 space-y-6">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>
			<div class="space-y-4 md:space-y-6">
				<div class="field">
					<%= f.label :email, class: "block mb-2 text-sm font-medium text-white" %>
					<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 bg-slate-700 border-slate-600 placeholder-slate-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
				</div>
				<div class="actions">
					<%= f.submit "Send me reset password instructions", class: "w-full text-white hover:bg-blue-700 focus:ring-4 focus:outline-none cursor-pointer focus:ring-slate-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-blue-600 hover:bg-blue-700 focus:ring-blue-800" %>
				</div>
			</div>
		<% end %>
		<div>
			
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
