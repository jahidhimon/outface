<%- if flash.any? %>
	<div class="flex flex-col fixed z-50 right-5 space-y-3 p-3">
		<%- flash.each do |type, message| %>
			<div data-controller="toast" class="flex justify-between items-center w-full max-w-xs px-4 py-2 rounded-lg opacity-70 text-slate-950 toast-<%= type %>" role="alert">
				<div class="ms-3 text-sm font-normal"><%= message %></div>
				<a href="#" class="text-2xl" data-action="toast#hide">&#10005;</a>
			</div>
		<% end %>
	</div>
<% end %>
